<section class="edit-form-container">
    <form action="" method="post">
        <h3>Edit Book Review</h3>
        <label>Title</label>
        <input type="text" name="title" class="box" value="{{book.title}}" >
        <label>Author</label>
        <input type="text" name="author" class="box" value="{{book.author}}" >
        <label>Genre</label>
        <input type="text" name="genre" class="box" value="{{book.genre}}" >
        <label>Stars</label>
        <input type="number" name="stars" class="box" value="{{book.stars}}" >
        <label>Image</label>
        <input type="text" name="type" class="box" value="{{book.imageUrl}}" >
        <label>Review</label>
        <textarea class="box"
            name="">{{book.bookReview}}</textarea>
        <input type="submit" value="Edit" class="btn">
    </form>
</section>
</body>